@{

    ViewData["Title"] = "Order";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            @Html.Partial("_SearchBar")
        </div>
    </div>
    <div class="row">
        @*  <div class="col-2">
        <div class="shadow rounded position-sticky"  id= "recipe-list">
        <div class="border-bottom border-3 p-2">
        <h4 class="text-pink text-center fst-italic">Foods</h4>
        @Html.Partial("_SideMenu")
        </div>
        </div>
        </div> *@


        <div class="container-fluid shadow rounded">
            <div class="row">
                <div class="col-4">
                    <img src="/images/foodImages/pizza1.jpg" class="w-80" id="order-img" />
                </div>
                <div class="col-8 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <form autocomplete="off" method="post">
                        @*  <input type="hidden" value="@Model.Id"></input>
                        <input type="hidden" value="@Model.Title"></input>
                        <input type="hidden" value="@Model.UserId"></input> *@
                        <div class="p-2">

                            @*------------------------ Bill Deatils ----------------------------------*@
                            <h2 class="text-dark">Bill Details</h2>
                            <div class="row border-bottom text-muted">
                                <label class="col-10 col-form-label">Title</label>
                                <label class="col-2 col-form-label text-success fw-bold"></label>
                            </div>
                            <div class="row border-bottom ">
                                <label class="col-10 col-form-label  text-muted">Price</label>
                                <div class="col-2">
                                    <i class="fa-solid fa-dollar-sign"></i>
                                    <inpu id="totalAmount" type="text" readonly value="@ViewBag.Price"></inpu>
                                    <span>
                                        150 @* @ViewBag.Price*@
                                    </span>
                                </div>
                            </div>
                            <div class="row border-bottom ">
                                <label class="col-8 col-form-label text-muted">Quantity</label>
                                <div class="col-3 border border-success border-2 p-1 text-center rounded">
                                    <span><i class="fa-solid fa-plus"></i></span>
                                    <input type="text" class="form-control d-inline w-50 bg-white" value="1" readonly />
                                    <span><i class="fa-solid fa-minus"></i></span>
                                </div>
                            </div>
                            <div class="row border-bottom ">
                                <label class="col-10 col-form-label  text-muted">Description</label>
                                <label class="col-2 col-form-label text-success fw-bold"></label>
                            </div>

                            <div class=" px-1 mb-2">
                                <label class="form-label text-muted">Delivery Address</label>
                                <input type="text" class="form-control" name="Address" value="">
                                @*   @Html.ValidationMessage("Adress") *@
                            </div>


                            <div class="row border-top border-dark border-1">
                                <label class="col-10 col-form-label fs-5 fw-bold">Total</label>
                                <div class="col-2">
                                    <i class="fa-solid fa-dollar-sign"></i>
                                    <span> 150 @*@ViewBag.Price*@</span>
                                </div>

                            </div>

                            <div>
                                <button type="submit" class="btn btn-sm btn-success p-2 shadow rounded">Add</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>


        </div>

    </div>
</div> 